#!/bin/bash
{
	#////////////////////////////////////
	# DietPi Services Script
	#
	#////////////////////////////////////
	# Created by Daniel Knight / daniel_haze@hotmail.com / dietpi.com
	#
	# Info:
	# - Allows service control for all listed programs used in dietpi-software
	# - Disable removes the autostart from init.d and systemD. This allows DietPi to control program services below.
	#
	# Usage:
	# - /DietPi/dietpi/dietpi-services start/stop/restart/disable
	#////////////////////////////////////

	#Force en_GB Locale for whole script. Prevents incorrect parsing with non-english locales.
	LANG=en_GB.UTF-8

	DISTRO=$(sed -n 3p /DietPi/dietpi/.hw_model)

	aSERVICE_NAME=(
		"cron"
		"transmission-daemon"
		"proftpd"
		"samba"
		"vsftpd"
		"apache2"
		"nginx"
		"lighttpd"
		"php5-fpm"
		"mysql"
		"mpd"
		"ympd"
		"minidlna"
		"noip2"
		"grasshopper"
		"dnsmasq"
		"subsonic"
		"webiopi"
		"haproxy"
		"fail2ban"
		"openvpn"
		"isc-dhcp-server"
		"hostapd"
		"shairport-sync"
		"squeezelite"
		"mariadb"
		"redis-server"
		"emonhub"
		"netdata"
		"mumble-server"
		"emby-server"
	)

	aSERVICE_AVAILABLE=0
	for ((i=0; i<${#aSERVICE_NAME[@]}; i++))
	do
		aSERVICE_AVAILABLE[$i]=0

	done

	#Check if service name is available on system.
	Populate_Available_Array(){

		for ((i=0; i<${#aSERVICE_NAME[@]}; i++))
		do

			if [ -f /etc/systemd/system/"${aSERVICE_NAME[$i]}".service ]; then
				aSERVICE_AVAILABLE[$i]=1

			elif [ -f /etc/init.d/"${aSERVICE_NAME[$i]}" ]; then
				aSERVICE_AVAILABLE[$i]=1

			# - Check dpkg for matching packages.
			elif (( $(grep -ci -m1 "${aSERVICE_NAME[$i]}$" "$FP_TEMP") == 1 )); then
				aSERVICE_AVAILABLE[$i]=1

			fi

		done

	}


	FP_TEMP="/tmp/.dietpi-services_installed"

	#/////////////////////////////////////////////////////////////////////////////////////
	# Main
	#/////////////////////////////////////////////////////////////////////////////////////
	#Info
	echo -e "\n \e[38;5;93mDietPi-Services\e[0m"
	echo -e " \e[90mMode:\e[0m $1"
	echo -e " \e[90mPlease wait...\e[0m"

	#Find installed services
	dpkg --get-selections | awk '{print $1}' > "$FP_TEMP"

	#-----------------------------------------------------------------------------------
	#disable/enable
	if [ "$1" = "disable" ] ||
		[ "$1" = "enable" ]; then

		#Check if service name is available on system.
		Populate_Available_Array

		for ((i=0; i<${#aSERVICE_NAME[@]}; i++))
		do

			#Apply
			if (( ${aSERVICE_AVAILABLE[$i]} == 1 )); then

				# - LSB
				if (( $DISTRO == 1 )); then
					update-rc.d -f ${aSERVICE_NAME[$i]} $1 &> /dev/null

				# - SystemD
				elif (( $DISTRO == 3 )); then
					echo -e "${aSERVICE_NAME[$i]}"
					systemctl $1 ${aSERVICE_NAME[$i]} &> /dev/null
					if (( $? == 0 )); then
						echo -e "\e[1A\e[32mOk\e[0m \e[90m|\e[0m ${aSERVICE_NAME[$i]}"
					else
						echo -e "\e[1A\e[31Failed\e[0m \e[90m|\e[0m ${aSERVICE_NAME[$i]}"
					fi

				fi

			fi

		done

		# + SystemD reload daemon
		if (( $DISTRO == 3 )); then
			systemctl daemon-reload &> /dev/null
		fi

		echo -e "\n \e[32mCompleted\e[0m\n"

	#-----------------------------------------------------------------------------------
	#start/stop/restart
	elif [ "$1" = "start" ] ||
		[ "$1" = "stop" ] ||
		[ "$1" = "restart" ]; then

		#DietPi: Non-service based control for specific dietpi-software installed programs.
		# - Start order first
		/etc/dietpi/dietpi-software/services/brutefir.service $1 &> /dev/null
		/etc/dietpi/dietpi-software/services/jackd.service $1 &> /dev/null
		/etc/dietpi/dietpi-software/services/jconvolver.service $1 &> /dev/null

		#Check if service name is available on system.
		Populate_Available_Array

		#Linux: installed services
		for ((i=0; i<${#aSERVICE_NAME[@]}; i++))
		do

			#Apply
			if (( ${aSERVICE_AVAILABLE[$i]} == 1 )); then

				# - LSB
				if (( $DISTRO == 1 )); then
					update-rc.d -f ${aSERVICE_NAME[$i]} $1 &> /dev/null

				# - SystemD
				elif (( $DISTRO == 3 )); then
					echo -e "${aSERVICE_NAME[$i]}"
					systemctl $1 ${aSERVICE_NAME[$i]} &> /dev/null
					if (( $? == 0 )); then
						echo -e "\e[1A\e[32mOk\e[0m \e[90m|\e[0m ${aSERVICE_NAME[$i]}"
					else
						echo -e "\e[1A\e[31Failed\e[0m \e[90m|\e[0m ${aSERVICE_NAME$i]}"
					fi

				fi

			fi

		done

		#DietPi: Non-service based control for specific dietpi-software installed programs.
		# - Start prority last
		/etc/dietpi/dietpi-software/services/raspimjpeg.service $1 &> /dev/null
		/etc/dietpi/dietpi-software/services/deluge.service $1 &> /dev/null
		/etc/dietpi/dietpi-software/services/squeezeboxserver.service $1 &> /dev/null
		/etc/dietpi/dietpi-software/services/openbazaar-server.service $1 &> /dev/null

		echo -e "\n \e[32mCompleted\e[0m\n"

		#Apply process tool settings
		if [ "$1" = "start" ] ||
			[ "$1" = "restart" ]; then

			/DietPi/dietpi/dietpi-process_tool 1

		fi

	#-----------------------------------------------------------------------------------
	#Invalid command
	else
		echo -e "\nDietPi-Services\nAvailable commands: start / stop / restart / enable / disable\n"
	fi
	#-----------------------------------------------------------------------------------
	rm "$FP_TEMP"
	unset aSERVICE_NAME
	#-----------------------------------------------------------------------------------
	exit
	#-----------------------------------------------------------------------------------
}
