#!/bin/bash
{
	#////////////////////////////////////
	# DietPi Copy to Ram Script
	#
	#////////////////////////////////////
	# Created by Dan Knight / daniel_haze@hotmail.com / fuzon.co.uk
	#
	#////////////////////////////////////
	#
	# Info:
	# - Copies our most used and global DietPi files and scripts to /tmp/
	# - /tmp/ is mounted as tmpfs (ram)
	# - This allows us to reduce filesystem IO in DietPi scripts.
	#////////////////////////////////////
	
	#/////////////////////////////////////////////////////////////////////////////////////
	#Main Loop
	#/////////////////////////////////////////////////////////////////////////////////////

	cp /boot/dietpi/.version /tmp/.version
	cp /boot/dietpi/dietpi-banner /tmp/dietpi-banner

	exit
}