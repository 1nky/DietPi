#!/bin/bash
{
	#////////////////////////////////////
	# DietPi Deluge Script
	#
	#////////////////////////////////////
	# Created by Dan Knight / daniel_haze@hotmail.com / fuzon.co.uk
	#
	# Info:
	# - Allows service control for deluge
	# - Called from dietpi-services
	#////////////////////////////////////

	Deluge_Stop(){
		killall deluged
		killall deluge-web
	}

	Deluge_Start(){
		/usr/bin/deluged &
		/usr/bin/deluge-web &
	}

	if [ "$1" = "stop" ] || [ "$1" = "restart" ]; then
		Deluge_Stop
	fi

	if [ "$1" = "start" ] || [ "$1" = "restart" ]; then
		Deluge_Start
	fi

	exit
}
